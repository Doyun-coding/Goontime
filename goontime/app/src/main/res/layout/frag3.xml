                    android:layout_marginTop="464dp"
                    android:layout_marginLeft="70dp"
                    android:textColor="@color/black"/>
                <Button
                    android:id="@+id/button_three2"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#00ff0000"
                    android:layout_marginTop="498dp"/>

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="51dp"
                    android:layout_marginTop="490dp"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/icon_three2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상병게시판"
                    android:textSize="17sp"
                    android:layout_marginTop="504dp"
                    android:layout_marginLeft="70dp"
                    android:textColor="@color/black"/>
                <Button
                    android:id="@+id/button_four2"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#00ff0000"
                    android:layout_marginTop="538dp"/>

                <ImageView
                    android:layout_width="47dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="530dp"
                    android:background="@drawable/icon_four" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="병장게시판"
                    android:textSize="17sp"
                    android:layout_marginTop="544dp"
                    android:layout_marginLeft="70dp"
                    android:textColor="@color/black"/>
                <Button
                    android:id="@+id/button_angry2"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#00ff0000"
                    android:layout_marginTop="578dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_angry"
                    android:layout_marginTop="584dp"
                    android:layout_marginLeft="21dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비여모게시판"
                    android:layout_marginTop="584dp"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="70dp"/>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>