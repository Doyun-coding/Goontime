<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="게시판"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:overScrollMode="never"
            android:scrollbars="none">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="650dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="142dp"
                    android:background="@drawable/text_bold_limpid"/>
                <Button
                    android:id="@+id/button_mywrite"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#00ff0000"
                    android:layout_marginTop="15dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_write"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내가 쓴 글"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="70dp"
                    android:textSize="17sp"
                    android:textColor="@color/black"/>
                <Button
                    android:id="@+id/button_comment"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#00ff0000"
                    android:layout_marginTop="55dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_comment"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="60dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="댓글 단 글"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="70dp"
                    android:textSize="17sp"
                    android:textColor="@color/black"/>
                <Button
                    android:id="@+id/button_hot2"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#00ff0000"
                    android:layout_marginTop="95dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_fire"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="100dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HOT 게시판"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="70dp"
                    android:textSize="17sp"
                    android:textColor="@color/black" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="224dp"
                    android:layout_marginTop="162dp"
                    android:background="@drawable/text_bold_limpid"/>
                <Button
                    android:id="@+id/button_free2"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#00ff0000"
                    android:layout_marginTop="175dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="182dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/icon_smile"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="182dp"
                    android:text="자유게시판"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_marginLeft="70dp"/>
                <Button
                    android:id="@+id/button_secret2"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#00ff0000"
                    android:layout_marginTop="215dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="222dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/icon_smile"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="222dp"
                    android:text="비밀게시판"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_marginLeft="70dp"/>
                <Button
                    android:id="@+id/button_done2"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#00ff0000"
                    android:layout_marginTop="255dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="262dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/icon_smile"/>
